<!DOCTYPE html>
<html>
  <head>
    <title>CMS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <!-- header -->
    <div class="header">
      <span class="title "></span>
      <h3 class="notification"> <%= render '/layouts/name' %></h3>
    </div> 
    <!-- sidebar -->
    <div class="sidebar">
      <ul class="">
        <li><a href="/dashboard/admin"><span class="fa fa-home icon" aria-hidden="true"></span><span class="desc">Dashboard</span></a></li>
        <li><a href="/dashboard/classes"><span class="fas fa-desktop icon" aria-hidden="true"></span><span class="desc">Classes</span></a></li>
        <li><a href="/profile/index"><span class="fa fa-user icon" aria-hidden="true"></span><span class="desc"> Profile</span></a></li>
        <li><a href="#"><span class="fa fa-question-circle icon" aria-hidden="true"></span><span class="desc"> Help</span></a></li>
        <li><a  data-confirm="Are you sure?" data-method="delete" href="/user_authentication/logout" rel="nofollow"><span class="fas fa-sign-out-alt icon" aria-hidden="true"></span><span class="desc"> Logout</span></a></li>
      </ul>
    </div>
    <!-- content -->
    <div class="content ">
      <%= yield %>
    </div>
  </body>
</html>
