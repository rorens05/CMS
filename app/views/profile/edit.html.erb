<%= flash[:notice] ? flash[:notice] : "" %>
<div class="container edit-profile">
<h1>Edit Profile</h1>
  <%= form_tag profile_update_path, multipart: true do %>

    <div class="form-group">
      <%= label_tag :image %>
      <%= file_field_tag :image, class: "form-control-file" %>
    </div>

    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, @student.email %>
    </div>

    <div class="form-group">
      <%= label_tag :contact_no %>
      <%= number_field_tag :contact_no, @student.contact_no %>
    </div>

    <div class="form-group">
      <%= label_tag :gender %>
      <%= select_tag :gender, options_for_select(["Male", "Female"], @student.gender ? "Male" : @student.gender) %>
    </div>

    <div class="form-group">
      <%= label_tag :birthday %>
      <%= date_select :birthday,{}, :order => [:day, :month, :year], :start_year => 1950, :end_year => Time.now.year - 1, class: "form-control date"  %>
    </div>

    <div class="form-group">
      <%= label_tag :address %>
      <%= text_field_tag :address, @student.contact_no %>
    </div>
    <%= submit_tag "Save", class: "btn btn-primary" %>
  <% end %>
</div>