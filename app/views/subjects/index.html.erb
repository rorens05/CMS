<p id="notice"><%= notice %></p>

<h1>Subjects</h1><hr>

<div class="jumbotron no-radius">

  <table class="index">
    <thead>
      <tr>
        <th>Name</th>
        <th>Subject code</th>
        <th>Year</th>
        <th>Units</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= link_to subject.name, subject  %></td>
          <td><%= subject.subject_code %></td>
          <td><%= subject.year %></td>
          <td><%= subject.units %></td>
          <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
          <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Subject', new_subject_path, class: "btn btn-primary no-button" %>

</div>