
<div class="class-list">
  <% classes.each do |c| %>
    <div class="class-container">  
      <div class="blue-header"></div>  
      <% if c.instructor.image %>
        <div class="icon"><%= image_tag c.instructor.image.variant(resize: "60x60") %><br/></div>        
      <% end %>      
      <p><strong><%= link_to c.subject.subject_code , c %></strong></p>
      <p><%= c.subject.name %></p>
      <p><small><%= c.schedule %></small></p>
    </div>
  <% end %>
</div>