
<p id="notice"><%= notice %></p>

<div class="classes-show no-radius">
  <%= render partial: 'subject_classes/class_details', locals: {subject_class: @subject_class} %>

  <hr>
  <div class="student-list">
    <h3>Tests</h3>

    <table class="index">
      <thead>
        <tr>
          <th>Name</th>
          <th>Test type</th>
          <th>Schedule</th>
          <th>Is online</th>
          <th>No of items</th>
          <th>Subject class</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tests.each do |test| %>
          <tr>
            <td><%= link_to test.name, test %></td>
            <td><%= test.test_type_id %></td>
            <td><%= test.schedule %></td>
            <td><%= test.is_online %></td>
            <td><%= test.no_of_items %></td>
            <td><%= test.subject_class_id %></td>
            <td><%= link_to 'Edit', edit_test_path(test) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Test', new_test_path(subject_class_id: @subject_class.id) %>
  </div>
</div>

